{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); model=$(echo \"$input\" | jq -r '.model.display_name'); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir'); used=$(echo \"$input\" | jq -r '.context_window.total_input_tokens + .context_window.total_output_tokens'); total=$(echo \"$input\" | jq -r '.context_window.context_window_size'); percentage=$(echo \"$input\" | jq -r '.context_window.used_percentage // 0'); if [ -d \"$cwd/.git\" ]; then branch=$(git -C \"$cwd\" rev-parse --abbrev-ref HEAD 2>/dev/null || echo \"\"); [ -n \"$branch\" ] && git_info=\" ($branch)\" || git_info=\"\"; else git_info=\"\"; fi; echo \"$model | $cwd$git_info | context: $used/$total ($percentage%)\""
  },
  "permissions": {
    "allow": [
    ],
    "ask": [
      "Bash(rm *)",
      "Bash(rmdir *)",
      "Bash(chmod *)",
      "Bash(chown *)",
      "Bash(chgrp *)",
      "Bash(ln *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(npm install *)",
      "Bash(npm install)",
      "Bash(npm i *)",
      "Bash(npm i)",
      "Bash(npm ci *)",
      "Bash(npm ci)",
      "Bash(npx create-* *)",
      "Bash(npm link *)",
      "Bash(npm init *)",
      "Bash(pip install *)",
      "Bash(pip uninstall *)",
      "Bash(pip3 install *)",
      "Bash(pip3 uninstall *)",
      "Bash(uv pip install *)",
      "Bash(uv add *)",
      "Bash(poetry add *)",
      "Bash(poetry install *)",
      "Bash(go install *)",
      "Bash(go get *)",
      "Bash(npm uninstall *)",
      "Bash(npm update *)",
      "Bash(npm publish *)"
    ],
    "deny": [
      "Bash(sudo *)",
      "Bash(su *)",
      "Bash(doas *)",
      "Bash(git push *)",
      "Bash(git push)",
      "Bash(shred *)",
      "Bash(dd *)",
      "Bash(pkexec *)",
      "Bash(systemctl *)",
      "Bash(service *)",
      "Bash(journalctl *)",
      "Bash(shutdown *)",
      "Bash(reboot *)",
      "Bash(poweroff *)",
      "Bash(mount *)",
      "Bash(umount *)",
      "Bash(fdisk *)",
      "Bash(mkfs *)",
      "Bash(useradd *)",
      "Bash(userdel *)",
      "Bash(usermod *)",
      "Bash(groupadd *)",
      "Bash(passwd *)",
      "Bash(visudo *)",
      "Bash(crontab *)",
      "Bash(at *)",
      "Bash(iptables *)",
      "Bash(nft *)",
      "Bash(firewall-cmd *)",
      "Bash(kill *)",
      "Bash(killall *)",
      "Bash(pkill *)",
      "Bash(ssh *)",
      "Bash(scp *)",
      "Bash(rsync *)",
      "Bash(ftp *)",
      "Bash(sftp *)",
      "Bash(nc *)",
      "Bash(ncat *)",
      "Bash(telnet *)",
      "Bash(nmap *)",
      "Bash(docker *)",
      "Bash(podman *)",
      "Bash(kubectl *)",
      "Bash(helm *)",
      "Bash(terraform *)",
      "Bash(ansible *)",
      "Bash(vagrant *)",
      "Bash(eval *)",
      "Bash(exec *)",
      "Bash(source *)",
      "Bash(bash -c *)",
      "Bash(sh -c *)",
      "Bash(zsh -c *)",
      "Bash(xargs *)",
      "Bash(env *)",
      "Bash(nohup *)",
      "Bash(screen *)",
      "Bash(tmux *)",
      "Bash(export *)",
      "Bash(unset *)",
      "Bash(alias *)",
      "Bash(dnf *)",
      "Bash(yum *)",
      "Bash(apt *)",
      "Bash(apt-get *)",
      "Bash(brew *)",
      "Bash(snap *)",
      "Bash(flatpak *)",
      "Bash(rpm *)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/*.pem)",
      "Read(./**/*.key)",
      "Read(./**/id_rsa*)",
      "Read(./**/id_ed25519*)",
      "Read(~/.ssh/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.aws/credentials)",
      "Read(~/.config/gcloud/**)"
    ],
    "defaultMode": "acceptEdits"
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false,
    "network": {
      "allowedDomains": ["github.com"]
    },
    "excludedCommands": ["podman"]
  },
  "env": {
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  }
}
